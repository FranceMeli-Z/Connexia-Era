{# Sets the layout to be extended #}
{% extends "layouts/lite.njk" %}

{# Imports components #}
{% import 'components/icon/icon.njk' as Icon %}
{% import 'components/btn/btnIcon.njk' as BtnIcon %}
{% import 'components/card2/card2_related.njk' as CardRelated %}
{% import 'components/card2/card2_news.njk' as Card2 %}


{% set componentName = "Card 2" %}

{# Sets page-specific variables #}
{% set page = {
  "data": {},
  "title": componentName + " - Components"
} %}

{% block head_css %}
  <link rel="stylesheet" href="../assets/css/general.bundle.css">
{% endblock %}

{% block content %}
  <main class="pt-4">

    <div class="container-l g-3 g-lg-7">

      <div class="row mx-0 border-bottom mb-4">
        <div class="col-12 px-0">
          <h2 class="mb-3">
            {{componentName}}
          </h2>
        </div>
        <!-- .col-* -->
      </div>
      <!-- .row -->

      <div class="row">

        <div class="col-12">
          <div class="py-5 zaux-theme--light1">

            <div class="row pb-5">
              {%
                set _decoVariations = [
                  "deco1-l-t",
                  "deco1-r-t",
                  "deco1-r-b",
                  "deco1-l-b"
                ]
              %}

              {% for decoVariation in _decoVariations %}

                <div class="col-12 col-md-3 mb-3">
                  {{Card2.content(
                    {
                      "className": [],
                      "innerClassName": ["border-left-gradient"],
                      "contentClassName": ["d-flex", "justify-content-between", "flex-column"],
                      "content": {
                        "category": "Report",
                        "title": "CKD-MBD Newsletter #23",
                        "date": "March 18, 2022",
                        "author": "CKD-MBD working group"
                      }
                    }
                  )}}

                </div>
                <!-- .col-* -->
              {% endfor %}

            </div>
            <!-- .row -->

             <div class="row pb-5">
              {%
                set _decoVariations = [
                  "deco1-l-t",
                  "deco1-r-t",
                  "deco1-r-b",
                  "deco1-l-b"
                ]
              %}

              {% for decoVariation in _decoVariations %}

                <div class="col-12 col-md-6 mb-3">
                  {{Card2.content(
                    {
                      "className": [],
                      "innerClassName": ["border-left-gradient"],
                      "contentClassName": ["d-flex", "justify-content-between", "flex-column"],
                      "content": {
                        "category": "Report",
                        "title": "CKD-MBD Newsletter #23",
                        "date": "March 18, 2022",
                        "author": "CKD-MBD working group"
                      }
                    }
                  )}}

                </div>
                <!-- .col-* -->
              {% endfor %}

            </div>

             <div class="row mb-5">
              {%
                set _decoVariations = [
                  "deco1-l-t",
                  "deco1-r-t",
                  "deco1-r-b",
                  "deco1-l-b"
                ]
              %}

              {% for decoVariation in _decoVariations %}

                <div class="col-12 col-md-6 mb-3">
                  {{CardRelated.content(
                    {
                      "className": [],
                      "innerClassName": ["border-all-gradient py-8 px-2 px-lg-7"],
                      "contentClassName": ["text-center"],
                      "content": {
                        "cta": "Profile",
                        "title": "CKD-MBD Newsletter #23",
                        "text": "As a member of the ERA-EDTA, Oxford University Press is pleased to be able to offer you a 35% discount on our Nephrology books."
                      }
                    }
                  )}}

                </div>
                <!-- .col-* -->
              {% endfor %}

            </div>

             <div class="row gx-3">
              {%
                set _decoVariations = [
                  "deco1-l-t",
                  "deco1-r-t"
                ]
              %}

              {% for decoVariation in _decoVariations %}

                <div class="col-12 col-md-6 mb-3">
                  {{CardRelated.content(
                    {
                      "className": ["d-lg-flex", "justify-content-center"],
                      "innerClassName": ["border-all-gradient", "py-8", "px-2", "px-lg-6"],
                      "contentClassName": ["text-center"],
                      "content": {
                        "title": "Diseases",
                        "list": ["Acute Kidney Injury", "CKD-MBD", "Diabetes", "Fabry nephropathy", "Hyponatraemia", "Obesity"]
                      }
                    }
                  )}}

                </div>
                <!-- .col-* -->
              {% endfor %}

            </div>

          </div>
        </div>
        <!-- .col-* -->

      </div>
      <!-- .row -->

    </div>
    <!-- .container-* -->

  </main>
{% endblock %}

{% block foot_js %}
  <script defer src="assets/js/general.bundle.js"></script>
{% endblock %}
