    {% if obj.searchfilter %}
      <div class="{{_className | join(" ")}}">
        <form class="{{componentClassName}}--light {{componentClassName}}__search d-flex flex-column flex-lg-row">
          <div class="d-flex {{componentClassName}}__search--grp pb-6 pb-lg-0">
            <div class="form-group">
              <select class="selection form-control">
                <option style="display:none;" selected>Topic</option>
                <optgroup label="Diseases">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
                <optgroup label="Treatments">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              </select>
            </div>
            <div class="form-group">
              <select class="form-control">
                <option selected>Series</option>
                <optgroup label="Diseases">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              <optgroup label="Treatments">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              </select>
              </div>
              <div class="form-group">
              <select class="form-control">
                <option selected>Year</option>
                <optgroup label="Diseases">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              <optgroup label="Treatments">
