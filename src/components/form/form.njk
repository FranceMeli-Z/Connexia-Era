                  <option>2</option>
                </optgroup>
              </select>
              </div>
              <div class="form-group">
              <select class="form-control">
                <option selected>Filtered by</option>
                <optgroup label="Diseases">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              <optgroup label="Treatments">
                  <option>1</option>
                  <option>2</option>
                </optgroup>
              </select>
            </div>
          </div>
          <div class="{{componentClassName}}__search--input">
            <div class="form-group">
              <input id="search" type="search" class="form-control">
            </div>
          </div>
        </form>
    </div>
    {% endif %}



