      <form class="{{componentClassName}}--light {{componentClassName}}--newsletter d-flex justify-content-center">
        <div class="form-group">
          <input id="newsletterEmailAddress" type="email" class="form-control h-100 mb-2" placeholder="Il tuo indirizzo email">
        </div>
