          <nav class="c-nav2--layout1 zaux-theme--dark1 ">
            <!-- BEGIN WP NAV -->
            <ul class="d-flex c-typo-style1-2 c-typo-style1-lg-4 justify-content-between align-items-center h-100">
              {% if obj.parisCongress %}
              <li>
                <a href="#" title="Generale Information">
                  General information
                </a>
              </li>
              <li>
                <a href="#" title="Scientific Programme">
                  Scientific Programme
                </a>
              </li>
              <li>
                <a href="#" title="Registration">
                  Registration
                </a>
              </li>
              <li>
                <a href="#" title="Abstract">
                 Abstract
                </a>
              </li>
               <li>
                <a href="#" title="Sponsors">
                 Sponsors
                </a>
              </li>
              <li>
                <a href="#" title="Hotel Accomodation">
                 Hotel Accomodation
                </a>
              </li>
              <li>
                <a href="#" title="Covid-19">
                 Covid-19
                </a>
              </li>
              {% else %}
               <li>
                <a href="#" title="Recipe">
                Recipe
                </a>
              </li>
              <li>
                <a href="#" title="About the project">
                  About the project
                </a>
              </li>
              <li>
                <a href="#" title="Nutritional information">
                  Nutritional information
                </a>
              </li>
              <li>
                <a href="#" title=" Submit your recipe">
                 Submit your recipe
